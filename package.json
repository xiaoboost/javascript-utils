{
  "name": "@xiao/utils",
  "version": "1.0.0-alpha1",
  "description": "自己用的 JavaScript 工具函数集合",
  "author": "xiaoboost",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "./web": {
      "import": "./dist/esm/web/index.js",
      "require": "./dist/cjs/web/index.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "test": "jest --config test/jest.conf.js --coverage --no-cache",
    "dev": "tsc -w -p ./tsconfig.dev.json",
    "build:cjs": "tsc -p ./tsconfig.build.json -m CommonJS --outDir ./dist/cjs --declarationDir ./dist/cjs",
    "build:esm": "tsc -p ./tsconfig.build.json -m ESNext --outDir ./dist/esm --declarationDir ./dist/esm",
    "build": "pnpm run clear && pnpm run build:cjs && pnpm run build:esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaoboost/js-utils.git"
  },
  "devDependencies": {
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "ava": "^3.15.0",
    "esbuild": "^0.12.2",
    "eslint": "^7.27.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}
